{
  "name": "pnpm-typescript-template",
  "type": "module",
  "version": "0.1.0",
  "private": true,
  "packageManager": "pnpm@10.26.2",
  "description": "",
  "author": "Caleb Williams",
  "license": "ISC",
  "keywords": [],
  "engines": {
    "node": ">=24"
  },
  "scripts": {
    "build": "pnpm -r build",
    "lint": "eslint",
    "lint:fix": "eslint --fix",
    "nuke": "del node_modules './**/node_modules'",
    "postinstall": "pnpm build",
    "test": "vitest",
    "typecheck": "tsc --noEmit"
  },
  "devDependencies": {
    "@antfu/eslint-config": "catalog:",
    "del-cli": "catalog:",
    "eslint": "catalog:",
    "eslint-plugin-format": "catalog:",
    "lint-staged": "catalog:",
    "prettier": "catalog:",
    "simple-git-hooks": "catalog:",
    "typescript": "catalog:",
    "vitest": "catalog:",
    "zshy": "catalog:"
  },
  "workspaces": [
    "packages/*"
  ],
  "simple-git-hooks": {
    "pre-commit": "pnpm lint-staged"
  },
  "lint-staged": {
    "*": "eslint --fix"
  }
}
